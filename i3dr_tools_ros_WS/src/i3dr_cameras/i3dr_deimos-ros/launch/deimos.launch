<?xml version="1.0"?>
<!--XML-->
<launch>
    <!-- SETUP ARGUMENTS -->
    <!-- enable/disable rviz -->
    <arg name="rviz" default="false" />
    <!-- enable/disable calibration -->
    <arg name="calibrate" default="false"/>
    <arg name="slam" default="false"/>

    <!-- SETUP ROBOT MODEL -->
    <!-- (robot model should be handelled by master) -->
    <param name="rd_i3dr_deimos" command="$(find xacro)/xacro '$(find i3dr_deimos)/urdf/deimos_scene.urdf.xacro'" />
    <arg name="use_tf_static" default="false"/>
    <node name="robot_state_publisher_deimos" pkg="robot_state_publisher" type="state_publisher">
        <remap from="robot_description" to="rd_i3dr_deimos"/>
        <param name="use_tf_static" value="$(arg use_tf_static)"/>
    </node>

    <!-- STEREO CAPTURE -->
    <include file="$(find i3dr_deimos)/launch/deimos_capture.launch">
        <arg name="camera_namespace" value="deimos"/>
        <arg name="device" value="/dev/video0"/>
    </include>

    <!-- STEREO CALIBRATION -->
    <include if="$(arg calibrate)" file="$(find i3dr_stereo_camera)/launch/stereo_calibration.launch">
        <arg name="camera_namespace" value="deimos"/>
    </include>

    <!-- STEREO MATCHER -->
    <include file="$(find i3dr_stereo_camera)/launch/stereo_matcher.launch">
        <arg name="camera_namespace" value="deimos"/>
        <arg name="gui" value="false"/>
        <arg name="stereo_algorithm" value="0" />
        <arg name="min_disparity" value="-60" />
        <arg name="disparity_range" value="128" />
        <arg name="correlation_window_size" value="19" />
        <arg name="uniqueness_ratio" value="2" />
        <arg name="speckle_size" value="1000" />
    </include>

    <!-- STEREO REGISTRATOIN -->
    <include if="$(arg slam)" file="$(find i3dr_registration_localisation)/launch/stereo_localisation.launch">
        <arg name="camera_namespace" value="deimos"/>
        <arg name="depth_odom" value="true"/>
        <arg name="disparity2Depth" default="true"/>
        <arg name="rgb_topic" value="/deimos/left/image_rect_color"/>
        <arg name="camera_info_topic" value="/deimos/left/camera_info"/>
        <arg name="depth_camera_info_topic" value="/deimos/left/camera_info"/>
        <!-- should be set to true if using SGBM as this takes longer to process -->
        <arg name="slow_processing" default="true"/>
    </include>

    <!-- DISPLAY -->
    <!-- run rviz with config file -->
    <node if="$(arg rviz)" pkg="rviz" type="rviz" name="rivz" 
        args="-d $(find i3dr_stereo_camera)/rviz/scene.rviz"/>

</launch>