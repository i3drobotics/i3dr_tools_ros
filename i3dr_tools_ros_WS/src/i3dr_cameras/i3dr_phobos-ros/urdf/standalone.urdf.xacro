<?xml version="1.0"?>

<robot name="phobos" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find i3dr_phobos)/urdf/phobos.urdf.xacro" />
  
  <link name="base_link" />

  <xacro:phobos_camera />
  
  <joint name="camera_link" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="phobos_center" />
  </joint>

</robot>